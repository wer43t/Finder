<Page x:Class="Finder.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">
    <Page.Resources>

    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="auth" Grid.ColumnSpan="2" Grid.Row="0" TextAlignment="Center" Padding="30" FontSize="36"/>
        <TextBlock Text="login" FontSize="36" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1"  Grid.Row="1" VerticalAlignment="Center"/>
        <TextBlock Text="password" FontSize="36" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"/>
        <PasswordBox Grid.Column="1" Grid.Row="2" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
            <Button Content="log in" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
