<Page x:Class="Finder.AppWindowPages.PageMessenger"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finder.AppWindowPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMessenger">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Эта страница на разработке!" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <TextBlock Text="Совсем скоро у вас появится возможность заниматься секстингом прямо здесь" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="1" FontSize="36" TextWrapping="Wrap"/>
        <ProgressBar IsIndeterminate="True" Grid.Row="2" Width="400" Height="50" VerticalAlignment="Top" />
    </Grid>
</Page>
