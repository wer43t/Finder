@using FinderCore;
@{ Layout = "~/Views/Shared/_IndexLayout.cshtml";}
@{
    ViewData["Title"] = "Login";
}

@{
    FinderCoreApp core = new FinderCoreApp();}
<h1>@ViewData["Title"]</h1>

<h2>Login to the site</h2>


<form asp-action="UpdateAbout" asp-controller="Account">
    <div>
        <div class="form-group">
            <label name="Education">Education </label>
            <input type="text" name="Education" />
        </div>
        <div class="form-group">
            <label name="Height">Height: </label>
            <input type="text" name="Height" />
        </div>
        <div class="form-group">
            <label name="Weight">Weight: </label>
            <input type="text" name="Weight" />
        </div>
        <div class="form-group">
            <label name="About">About: </label>
            <input type="text" name="Weight" />
        </div>
        <div class="form-group">
            <label name="Zodiac_ID">Zodiac: </label>
            <select name="Zodiac_ID">
                @foreach (var item in core.GetZodiac())
                {
                    <option value="@item.Zodiac_ID.ToString()" name="Country">@item.Name.ToString()</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Sign in" class="btn btn-outline-dark" />
        </div>
    </div>
</form>